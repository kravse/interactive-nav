
//- --------------------------------------------------------
//- Base
//- --------------------------------------------------------


html
  font-size: ($p/16) * 100%
  width: 100%

  *
    box-sizing: border-box

body
  font-weight: 400
  width: 100%
  font-family: 'Source Sans Pro', sans-serif
  
  button, a
    font-family: 'Source Sans Pro', sans-serif

  h1, h2, h3, h4, h5
    margin-top: 0

  h1
    font-size: em($h1)
    font-weight: 300
    color: $grey

    +media('mobile')
      font-size: em($h2)

  h2
    font-size: em($h2)
    font-weight: 300
    color: $grey

    +media('mobile')
      font-size: em($h3)

  h3
    font-size: em($h3)
    font-weight: 300
    color: $mid-grey

    +media('mobile')
      font-size: em($h4)

  h4
    font-size: em($h4)

    +media('mobile')
      font-size: em($h5)

  h5
    font-size: em($h5)

    +media('mobile')
      font-size: em($p)

  p
    font-size: em($p)

  a
    text-decoration: none

  a, button
    &:focus
      outline: none
      -webkit-box-shadow: 0px 0px 4px 0px $focus
      box-shadow: 0px 0px 4px 0px $focus
      
.nav
  border: 1px solid $soft-blue
  border-left: 0
  background: $white
  position: relative
  cf()
  
  +media('mobile')
    border: 0
  
  &.nav-visible-mobile
    +media('mobile')
      #main-nav-list
        display: block
    
      #burger
        background-position: center top
  
  #main-nav-list
    +media('mobile')
      display: none
      padding-top: 40px
      border: 1px solid $soft-blue
  
  #burger
    display: none
    
    +media('mobile')
      display: block
      position: absolute
      top: 5px
      right: 5px
      opacity: 0.5
      text-indent: -1000px
      overflow: hidden
      width: 30px
      padding: 0
      height: 30px
      z-index: 3
      background-image: url('../images/newburger.png')
      background-repeat: no-repeat
      background-size: 30px
      background-position: center bottom
    
  button, a
    transform: background 0.3s ease
    background: transparent
    
    +media('minMob')
      &:hover
        background: $hover-grey
      
  ul
    float right
    text-align: right
    padding: 0 
    margin: 0
    
    +media('mobile')
      display: block
      width: 100%
      float: none
    
    li
      margin: 0
      padding: 0
      height: $nav-height
      display: inline-block
      border-left: 1px solid $soft-blue
      
      +media('mobile')
        display: block
        width: 100%
        height: auto
      
  input
    padding: 10px
    border: 1px solid $soft-blue
    border-radius: 3px
    font-size: em(10)
    
  ::-webkit-input-placeholder
    color: $black
  :-moz-placeholder
    color: $black
  ::-moz-placeholder
    color: $black
  :-ms-input-placeholder
    color: $black
      
  .drop-parent
    position: relative
    z-index: 1
    
    +media('mobile')
      border-bottom: 1px solid $soft-blue
    
    &.show-drop
      .drop
        opacity: 1
        top: 100%
        bottom: auto
        
        +media('mobile')
          top: auto
          max-height: 300px
      
      button.chev
        
        &:before
          transform: rotate(180deg)
    
    &.search-parent
      z-index: 2
      +media('mobile')
        border-bottom: 0
        border-top: 1px solid $light-blue
        .drop
          top: auto
          display: block
          border-top: 0
      
  
  .drop.search-drop
    padding: 15px
    margin-top: 1px
    
    +media('mobile')
      max-height: 100%
    
    input
      height: 35px
      border-top-right-radius: 0
      border-bottom-right-radius: 0
      border-right: 0
      min-width: 350px
      
      +media('mobile')
        min-width: 0
        width: 80%
        
    .search-cta
      height: 35px
      width: 45px
      border: 1px solid $soft-blue
      border-top-right-radius: 3px
      border-bottom-right-radius: 3px
      text-indent: -1000px
      overflow: hidden
      position: relative
      top: 1px
      background: $white
      
      +media('mobile')
        width: 20%
      
      &:before
        content: ''
        position: absolute
        display: block
        top: 50%
        left: 50%
        height: 33px
        width: 33px
        margin-top: -16.5px
        margin-left: -16.5px
        background-image: url('../images/searchsprite.png')
        background-position: center bottom
        background-size: 33px
        background-repeat: no-repeat
    
  .drop
    position: absolute
    right: -9px
    bottom: 100%
    white-space: nowrap
    border: 8px solid $light-grey
    border-top: 0
    background: $white
    opacity: 0
    transition: opacity 0.3s ease, max-height 1s ease
    
    +media('mobile')
      position: relative
      right: auto
      bottom: auto
      top: auto
      opacity: 1
      border: 0
      height: auto
      overflow: hidden
      max-height: 0
    
    a
      color: $black
      display: block
      line-height: 55px
      padding: 0 15px
      
      +media('mobile')
        line-height: 2.5em
    
    li
      display: block
      border: 0
      border: 1px solid $soft-blue
      border-bottom: 0
      text-align: left
      height: auto
      
      +media('mobile')
        background: #DCE8EC
        border: 0
      
      
      &:last-of-type
        border-bottom: 1px solid $soft-blue
    
  button:not(.search-cta)
    width: 100%
    padding: 0 45px 0 25px
    line-height: $nav-height
    border: 0
    text-transform: capitalize
    font-size: em($p)
    
    +media('mobile')
      text-align: left
    
    &.chev
      position: relative
      &:before
        content: ''
        position: absolute
        right: 15px
        top: 50%
        width: 13px
        height: 8px
        margin-top: -4px
        background-image: url('../images/chev.png')
        background-position: center center
        background-repeat: no-repeat
        background-size: 13px
        transition: transform 0.3s ease
        
    
    &.search
      width: 65px
      text-indent: -1000px
      overflow: hidden
      background: $light-blue
      position: relative
      
      +media('mobile')
        display: none
      
      &:before
        content: ''
        position: absolute
        display: block
        top: 50%
        left: 50%
        height: 33px
        width: 33px
        margin-top: -16.5px
        margin-left: -16.5px
        background-image: url('../images/searchsprite.png')
        background-position: center top
        background-size: 33px
        background-repeat: no-repeat
      
